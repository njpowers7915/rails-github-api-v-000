<div class = "container">
  <h1> USERNAME Repos</h1>
  <!-- List repositories here! -->
  <% if @repos %>
    <ul>
      <% @repos.each do |repo| %>
        <li><%= "#{repo['name']}" %></li>
        <% end %>
      </ul>
  <% else %>
    <p>Looks like you don't have any repositories.</p>
  <% end %>

  <%= form_tag '/repositories' do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag "Add Repo" %>
  <% end %>
</div>
